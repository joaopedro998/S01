puts "Digite o primeiro número:"
num1 = gets.to_f

puts "Digite o segundo número:"
num2 = gets.to_f

puts "Digite o terceiro número:"
num3 = gets.to_f

media = (num1 + num2 + num3) / 3

puts "A média dos três números é: #{media}"


class Carro
  def descrever
    "Este é um carro genérico."
  end
end

class CarroEsportivo < Carro
  def descrever
    "Este é um carro esportivo. É rápido e estiloso."
  end
end


class CarroSedan < Carro
  def descrever
    "Este é um carro sedan. É confortável e espaçoso."
  end
end


carro_generico = Carro.new
carro_esportivo = CarroEsportivo.new
carro_sedan = CarroSedan.new


puts carro_generico.descrever
puts carro_esportivo.descrever
puts carro_sedan.descrever
